@page
@model CS2InvestmentTracker.App.Pages.IndexModel

@{
    ViewData["Title"] = "Home page";
}

<div class="container">
    <div class="row">
        <!-- Menu Laterale -->
        <div class="col-md-3">
            <ul class="list-group">
                <li class="list-group-item">
                    <a href="#" data-table="Items" class="load-table">Items</a>
                </li>
                <li class="list-group-item">
                    <a href="#" data-table="Categories" class="load-table">Categories</a>
                </li>
            </ul>
        </div>

        <!-- Area di Contenuto -->
        <div class="col-md-9">
            <div id="contentArea">
                <!-- Il contenuto dinamico verrà caricato qui -->
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="~/js/itemsTable.js"></script>
    <script src="~/js/categoriesTable.js"></script>
    <script>
        $(".load-table").click(function() {
            var tableName = $(this).data("table");
            loadTable(tableName);
        })

        function loadTable(tableName) {
            var url = '/Index?handler=' + tableName;
            console.log('Chiamata AJAX a: ' + url);

            $.ajax({
                url: url,
                type: 'GET',
                success: function (data) {
                    $('#contentArea').html(data);

                    switch (tableName) {
                        case 'Categories':
                            bindCategoriesUI();
                            initCategoriesTable();
                            break;
                        case 'Items':
                            bindItemsUI();
                            initItemsTable();
                            break;
                    }
                },
                error: function (xhr, status, error) {
                    console.error('Errore AJAX:', xhr.responseText);
                }
            });
        }
    </script>
}
